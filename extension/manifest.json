{
  "manifest_version": 3,
  "name": "LeetCode to VS Code",
  "version": "0.2.0",
  "description": "Open LeetCode problems in VS Code, test and submit solutions",
  "permissions": ["nativeMessaging", "cookies"],
  "host_permissions": ["https://leetcode.com/*", "*://*.leetcode.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LeetCode Exporter Setup"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
